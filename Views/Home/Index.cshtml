@model IEnumerable<ASP.NET_MVC_EF_CRUD_Operation.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["DeleteMessage"] != null)
{
    @Html.Raw(TempData["DeleteMessage"].ToString())
}

@if (TempData["UpdateMessage"] != null)
{
    @Html.Raw(TempData["UpdateMessage"].ToString())
}

@if (TempData["CreateMessage"] != null)
{
    @Html.Raw(TempData["CreateMessage"].ToString())
}


<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn-link" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn-link" }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn-link" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn-link" })
            </td>
        </tr>
    }

</table>
